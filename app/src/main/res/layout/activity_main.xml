<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout"
    android:orientation="vertical"
    tools:context="com.example.haiqal.crudsqlitehaiqallanjutan.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity=""
                android:layout_marginLeft="30dp"
                android:src="@drawable/kampus" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Kampus"
                android:textColor="#ffffff" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity=""
                android:layout_marginLeft="30dp"
                android:src="@drawable/mahasiswa" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity=""
                android:layout_marginLeft="45dp"
                android:text="Mahasiswa"
                android:textColor="#ffffff" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/perpustakaan"
                android:onClick="perpustakaan"
                android:layout_marginLeft="30dp"
                android:src="@drawable/perpustakaan" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity=""
                android:layout_marginLeft="45dp"
                android:text="Perpustakaan"
                android:textColor="#ffffff" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity=""
                android:layout_marginLeft="30dp"
                android:src="@drawable/kantin" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="Kantin"
                android:textColor="#ffffff" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity=""
                android:layout_marginLeft="30dp"
                android:src="@drawable/facebook" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:textColor="#ffffff" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity=""
                android:layout_marginLeft="30dp"
                android:src="@drawable/instagram" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity=""
                android:layout_marginLeft="45dp"
                android:textColor="#ffffff" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity=""
                android:layout_marginLeft="30dp"
                android:src="@drawable/twitter" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity=""
                android:layout_marginLeft="45dp"
                android:textColor="#ffffff" />

        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/sign_out"
        style="?android:textAppearanceSmall"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:background="#ffff"
        android:text="@string/btn_sign_out"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

</LinearLayout>
